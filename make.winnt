!INCLUDE env.tmp
TARGET	= priv\sniff.dll
BUILD	= _build\$(MIX_ENV)\lib\sniff\$(TARGET)
SOURCES = src\sniff_winnt.c src\sniff.c

all: $(BUILD)

$(TARGET): $(SOURCES)
	cl /W4 /LD /MD /I"$(ERTS_HOME)\INCLUDE" /Foobj/ /Fe$(TARGET) $(SOURCES)

$(BUILD): $(TARGET)
	copy $(TARGET) $(BUILD)

clean:
	del /q obj\*
	del /q priv\sniff.*
